.row
  .col-md-6.col-md-offset-3
    .panel.panel-default
      .panel-heading
        %h2 New ad
      .panel-body
        = simple_form_for @advert do |f|
          = f.error_notification
          .form-group

            = f.input :advert_type, required: true, collection: ['Job', 'Care'],
                       label: 'Looking for', input_html: { class: 'form-control' }
            = f.input :title, required: true, input_html: { class: 'form-control' }
            = f.input :description, required: true, input_html: { class: 'form-control' }
            = f.input :price, required: true, label: 'Price per hour',
                       input_html: { class: 'form-control' }
            = f.input :job_type, required: true, collection: ['Full-time', 'Part-time'],
                      label: 'Choose job type', input_html: { class: 'form-control' }
            = f.input :city, required: true, input_html: { class: 'form-control' }
            = f.input :street, required: true, input_html: { class: 'form-control' }
            = f.input :phone, required: true, input_html: { class: 'form-control' }
          %br/
          %h3 Locations
          #locations
          = f.simple_fields_for :locations do |location|
            = render 'location_fields', f: location

          .links
            = link_to_add_association 'add location', f, :locations

          .form-actions
            = f.button :submit, "Create", class: "btn btn-primary"
          %br/
      .panel-footer
