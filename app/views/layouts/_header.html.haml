%header
  %nav.navbar.navbar-default
    .container-fluid
      .navbar-header
        .brand-label= link_to image_tag('logo_v1.png'), root_path
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li= link_to 'Post an Ad', new_recipe_url, class: 'btn btn-primary'
          %li= link_to 'Account', edit_user_registration_path, class: 'btn btn-default'
          %li= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'btn btn-default'
        - else
          %li= link_to 'Sign In', new_user_session_path, class: 'btn btn-default'
          %li= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary'
